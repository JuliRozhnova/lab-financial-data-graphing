          <input type="date" id="startDate" value="">
        </div>
        <div class="container-dates-item">
          <label for="endDate">To:</label>
          <input type="date" id="endDate" value="">
        </div>
      </div>
      <div class="container-currency">
        <label for="currency">Curency:</label>
        <select name="currency" id="currency">
          <option value="USD">US Dollar ($)</option>
          <option value="EUR">Euro (â‚¬)</option>
        </select>
      </div>
    </div>
    <div class="container-box values">
      <h1>Values</h1>
      <p id="maxValue"></p>
      <p id="minValue"></p>
    </div>
  </div>
  <canvas id="bitcoinChart" width="400" height="200"></canvas>
</body>
<script src="/javascripts/financial-data.js" charset="utf-8"></script>

</html>